{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_raw_orders",
						"type": "DatasetReference"
					},
					"name": "OrdersRaw"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "OrderDateAndUpdateTimestamp",
					"description": "Creating/updating the columns 'ORDER_DATE', ORDER_DATETIME, CUSTOMER_ID, ORDER_STATUS"
				},
				{
					"name": "cast1"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> OrdersRaw",
				"OrdersRaw derive(ORDER_DATE = toDate('ORDER_DATETIME', 'dd-MMM-yy HH.mm.ss.SS'),",
				"          UPDATED_TIMESTAMP = currentUTC()) ~> OrderDateAndUpdateTimestamp",
				"OrderDateAndUpdateTimestamp cast(output(",
				"          ORDER_DATE as date",
				"     ),",
				"     errors: true) ~> cast1"
			]
		}
	}
}